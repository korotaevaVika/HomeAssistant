<ResourceDictionary            
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeAssistant.App"             
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
             >
    <!--xmlns:vm="clr-namespace:MES.ProductCalculator.ViewModels"
             xmlns:views="clr-namespace:MES.ProductCalculator.Views"-->
    <DataTemplate DataType="{x:Type local:SettingsViewModel}">
        <local:Settings/>
    </DataTemplate>

    <Style TargetType="Button">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5, 2, 5, 2"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>

