<Application x:Class="HomeAssistant.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HomeAssistant.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary 
                    Source="pack://application:,,,/HomeAssistant.Core;component/Resources/Resources.xaml"/>
                <ResourceDictionary 
                    Source="pack://application:,,,/HomeAssistant.App;component/Strings/Dictionary_en.xaml"/>
                <ResourceDictionary 
                    Source="pack://application:,,,/HomeAssistant.App;component/Strings/Dictionary_ru.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
